{% extends 'base.html.twig' %}

{% block title %}{{ nomPage }}{% endblock %}

{% block body %}
    {% if app.user %}


        <h1 class="text-center text-primary">{{ course.name }}</h1>
        <div class="row">

            <div class="col-4">
                <Aside>
                    <h4 class="mb-0 text-primary">{{ course.name }}</h4>
                    <p class="card-text mb-auto">{{ course.description | raw }}</p>
                    <div class="mb-1 text-muted">Le {{ course.creationDate | date('d/m/Y') }} par {{ course.IsCreatedBy.firstName}} {{ course.IsCreatedBy.lastName}}</div>
                    <img src="{{  course.Picture  }}" alt="img-fluid" width="150" Height="150">

{#                        {% for section in course.sections %}#}
{#                        {% endfor %}#}



                </aside>

            </div>

            <div class="col-8">
            </div>
        </div>

    {%  else %}
        <a href="{{ path('app_enregistrement_apprenant') }}" class="stretched-link">S'enregistrer pour débuter la formation</a>
    {%  endif %}
{% endblock %}


