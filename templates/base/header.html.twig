<header class="">

    <div class="row flex-nowrap align-items-center m-0">
        <div class="col-4">
            <a href="{{ path('app_home') }}" class="d-flex align-items-center col-md-auto m-0 text-decoration-none">
                <img src="{{ asset('/pictures/EcoIT.png') }}" width="70px" alt="logo eco-it"/>
                <div class="m-2 text-primary">
                    Formation à léco-conception numérique
                </div>
            </a>
        </div>


        <div class="col-4">
            <nav class="nav d-flex justify-content-start">
                <a class="btn btn-sm btn-outline-primary m-2" href="{{ path('courses') }}">Formations</a>

                {% if is_granted('ROLE_INSTRUCTOR') %}
                    <a class="btn btn-sm btn-outline-primary m-2" href="{{ path('admin') }}">Administration</a>
                {% elseif is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-sm btn-outline-primary m-2" href="{{ path('admin') }}">Administration</a>
                {%  endif %}




            </nav>
        </div>


        <div class="col-4">
            <nav class="nav d-flex justify-content-end">
                {% if app.user %}
                    {% if is_granted('ROLE_CANDIDATE') %}
                        <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('account') }}"><strong>{{app.user.firstName}}</strong></a>
                    {% elseif is_granted('ROLE_INSTRUCTOR') %}
                        <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('account') }}"><strong>{{app.user.firstName}}</strong></a>
                    {% elseif is_granted('ROLE_USER') %}
                        <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('account') }}"><strong>{{app.user.nickname}}</strong></a>
                    {%  endif %}

                    <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('app_logout') }}">Se déconnecter</a>
                {%  else %}
                    <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('app_enregistrement_apprenant') }}">Créer un compte apprenant</a>
                    <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('app_candidate_register') }}">Postuler comme formateur</a>
                    <a class="btn btn-sm btn-outline-secondary m-2" href="{{ path('app_login') }}">Se connecter</a>
                {%  endif %}
            </nav>
        </div>
    </div>

</header>